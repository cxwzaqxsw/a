
@{
    ViewBag.Title = "list";
    var newsList = ViewBag.data as string[];
    var curpage = (int)ViewBag.page;
    var start = curpage - 3;

}

<h2>list</h2>

<h3>第@ViewBag.page页</h3>

<ol>
    @foreach (var item in newsList)
    {   <li>@item</li>}
</ol>


<ol>
    @for (int i = 0; i < newsList.Length; i++)
    {
    <li>@newsList</li>}
</ol>


<ol>
    @for (int i = start; i < curpage + 3; i++)
    {
       <li><a href="/Home/List?Page=@i">第 @i 页</a></li>
     @*  @Html.ActionLink(String.Format("第{0}",i),"List",new { page = i }, null)*@
    }
</ol>


<ol class="list-unstyled">
 
    @foreach (var item in newsList)
    {
        <li>@item</li>
    }
</ol>

